{% extends 'CravlerChatBundle:Chat:layout.html.twig' %}

{% block body %}

<div class="body container" ng-controller="AppCtrl">

    <div class="row">

        <div class="col-md-10">
            <div class="panel panel-primary">
                <div class="panel-heading">Messages</div>
                <div class="panel-body overflowable messages">
                    <div class="alert" ng-repeat="message in messages" ng-class="message.me">
                        {[{message.user}]}: {[{message.text}]}
                    </div>
                </div>
            </div>
            <div>
                <form ng-submit="sendMessage()" class="well form-search form-send-message">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon">@</span>
                        <input ng-model="message" placeholder="Message" class="form-control input-message"/>
                        <span class="input-group-btn">
                            <button class="btn btn-success" type="submit">Send</button>
                        </span>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-2">
            <div class="panel panel-primary">
                <div class="panel-heading">Users</div>
                <div class="panel-body overflowable users">
                    <ul class="nav nav-pills nav-stacked">
                        <li ng-repeat="user in users"> <a ng-click="mention(user)">{[{user}]}</a></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>

    <form ng-submit="changeName()">
    <div id="changeNameModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Change your name</h4>
                </div>
                <div class="modal-body input-group-lg">
                    <p>Your current user name is {[{name}]}</p>
                    <input class="form-control" ng-model="newName"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    </form>

    <div id="infoModal" tabindex="-1" role="dialog" aria-labelledby="infoModal" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Angular + CravlerRemoteBundle</h4>
                </div>
                <div class="modal-body">
                    <p><a href="https://github.com/cravler" target="_blank">Github</a></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock body %}